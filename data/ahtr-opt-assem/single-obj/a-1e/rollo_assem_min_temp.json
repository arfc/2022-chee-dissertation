{
    "control_variables": {
        "r1": {"min": 0.1, "max": 0.35},
        "r2": {"min": 0.1, "max": 0.35},
        "r3": {"min": 0.1, "max": 0.35},
        "r4": {"min": 0.1, "max": 0.35},
        "r5": {"min": 0.1, "max": 0.35}
    },
    "evaluators": {
        "openmc": {
            "order": 0,
            "input_script": ["aprun -n 1 -d 1 --env OMP_NUM_THREADS=1 python ", "fhr_assem_openmc.py"],
            "execute": [["aprun -n 1 -d 64 --env OMP_NUM_THREADS=64 openmc-0.12.2"], ["aprun -n 1 -d 1 --env OMP_NUM_THREADS=1 python ../../../../../../moltres/python/moltres_xs.py", "fhr_assem_gc.inp"]],
            "inputs": ["r1", "r2", "r3", "r4", "r5"],
            "output_script": ["aprun -n 1 -d 1 --env OMP_NUM_THREADS=1 python ", "fhr_assem_openmc_output.py"],
            "outputs": ["keff"]
        },
        "moltres": {
            "order": 1,
            "input_script": ["aprun -n 1 -d 1 --env OMP_NUM_THREADS=1 python ", "automate_mesh.py"],
            "execute": [["bash", "mesh_generate.sh"], ["aprun -n 64 -N 64 -d 1 -j 1 moltres-opt -i ", "fhr_assem_moltres.i"] ],
            "inputs": ["r1", "r2", "r3", "r4", "r5"],
            "output_script": ["aprun -n 1 -d 1 --env OMP_NUM_THREADS=1 python ", "fhr_assem_moltres_output.py"], 
            "outputs": ["max_temp"]
        }
    },
    "constraints": {"keff": {"operator": [">="], "constrained_val": [1.38]}},
    "algorithm": {
        "objective": ["min"],
        "weight": [1.0],
        "optimized_variable": ["max_temp"],
        "pop_size": 128,
        "generations": 2,
        "parallel": "job_control"
    }
}
