{
    "control_variables": {
        "total_pf": {"min": 0.05, "max": 0.07},
        "sine_a_x": {"min": 0.0, "max": 2.0},
        "sine_b_x": {"min": 0.0, "max": 1.57},
        "sine_c_x": {"min": 0.0, "max": 6.28},
        "sine_a_y": {"min": 0.0, "max": 2.0},
        "sine_b_y": {"min": 0.0, "max": 1.57},
        "sine_c_y": {"min": 0.0, "max": 6.28}
    },
    "evaluators": {
        "openmc": {
            "order": 0,
            "input_script": ["aprun -n 1 -d 1 --env OMP_NUM_THREADS=1 python ", "fhr_assem_openmc.py"],
            "execute": [["aprun -n 1 -d 64 --env OMP_NUM_THREADS=64 openmc-0.12.2"]], 
            "inputs": ["total_pf", "sine_a_x", "sine_b_x", "sine_c_x", "sine_a_y", "sine_b_y", "sine_c_y"],
            "output_script": ["aprun -n 1 -d 1 --env OMP_NUM_THREADS=1 python ", "fhr_assem_openmc_keff.py"],
            "outputs": ["total_pf","keff"]
        }
    },
    "constraints": {"keff": {"operator": [">="], "constrained_val": [1.38]}},
    "algorithm": {
        "objective": ["min"],
        "weight": [1.0],
        "optimized_variable": ["total_pf"],
        "pop_size": 128,
        "generations": 3,
        "parallel": "job_control"
    }
}
